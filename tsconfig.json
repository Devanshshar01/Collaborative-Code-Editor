{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@config/*": ["./src/config/*"],
      "@core/*": ["./src/core/*"],
      "@db/*": ["./src/db/*"],
      "@routes/*": ["./src/routes/*"],
      "@services/*": ["./src/services/*"],
      "@types/*": ["./src/types/*"]
    },
    "types": ["node", "jest"]
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": [
    "src/server.ts",
    "src/server-yjs.ts",
    "src/core/**/*.ts",
    "src/db/**/*.ts",
    "src/routes/**/*.ts",
    "src/services/**/*.ts",
    "src/types/**/*.ts",
    "src/config/index.ts",
    "src/config/execution.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/components",
    "src/hooks",
    "src/App.jsx",
    "src/main.jsx",
    "src/config/webrtc.ts",
    "**/*.jsx",
    "**/*.tsx"
  ]
}